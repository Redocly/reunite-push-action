{
  "preset": "ts-jest",
  "verbose": true,
  "clearMocks": true,
  "testEnvironment": "node",
  "moduleFileExtensions": ["js", "ts"],
  "testMatch": ["**/*.test.ts"],
  "testPathIgnorePatterns": ["/node_modules/", "/dist/"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "coverageReporters": ["json-summary", "text", "lcov"],
  "collectCoverage": true,
  "collectCoverageFrom": ["./src/**"],
  "coverageThreshold": {
    "global": {
      "branches": 55,
      "functions": 90,
      "lines": 80,
      "statements": 80
    }
  }
}
